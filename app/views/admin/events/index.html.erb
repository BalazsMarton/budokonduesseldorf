<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Event begin</th>
      <th>Event end</th>
      <th>Place</th>
      <th>Maplink</th>
      <th>Cover image</th>
      <th>Event description</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.event_begin %></td>
        <td><%= event.event_end %></td>
        <td><%= event.place %></td>
        <td><%= event.maplink %></td>
        <td><%= event.cover_image %></td>
        <td><%= event.event_description %></td>
        <td><%= event.published_at %></td>
        <td><%= link_to 'Show', [:admin, event] %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', [:admin, event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

