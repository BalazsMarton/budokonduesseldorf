<div class="row">
  <% if notice %>
    <div class="col-sm-12">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="col-sm-12 aftermargin">
    <%= link_to 'New review', new_admin_creview_path, :class => "btn btn-primary" %>
  </div>

  <% if @creviews.present? %>
  <div class="col-sm-12">
    <h3>Customer Reviews</h3>
  </div>

  <div class="col-sm-12">

    <table class="table table-hover table-responsive table-bordered">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Pos nr</th>
          <th>Name</th>
          <th>Content</th>
        </tr>
      </thead>

      <tbody>
        <% @creviews.each do |creview| %>
          <tr>
            <td><%= link_to 'Show', [:admin, creview], :class => "btn btn-primary" %> <%= link_to 'Edit', edit_admin_creview_path(creview), :class => "btn btn-primary" %> <%= link_to 'Destroy', [:admin, creview], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
            <td><%= creview.pos_nr %></td>
            <td><%= creview.name %></td>
            <td><%= truncate creview.content, :length => 60 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%end%>

</div>

