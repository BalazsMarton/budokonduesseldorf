<div id="" class="event-hero container-fluid" data-stellar-background-ratio="0.5" style="background:url(<%= @events.cover_image %>)">
	<div class="row">
		<div class="col-sm-12 caption-wrap">
			<div class="caption"><h3><%= @events.title %></h3>
			</div>
		</div>
	</div>
</div>

<div class="jumptarget" id="content-jump"></div>

<div class="content-section">

	<div class="container">
		<div class="row">
			<div class="col-sm-12 content-basemargin justify">
			<h3 class="color-gold">COURSE DESCRIPTION</h3>
				<p><%= @events.event_description %>
				</p>
				<%= link_to contacts_path(anchor: 'content-jump'), class: 'button-link' do %>
						<button type="button" class="btn btn-lg btn-outline-secondary pull-right">BOOK NOW</button>
					<% end %>
			</div>
		</div>
	</div>
	
</div>